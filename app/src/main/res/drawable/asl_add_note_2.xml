<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item
      android:id="@+id/done"
      android:drawable="@drawable/ic_note_done"
      android:state_checked="true"/>

  <item
      android:id="@+id/plus"
      android:drawable="@drawable/ic_add_note_2" />

  <transition
      android:drawable="@drawable/add_note_2"
      android:fromId="@id/plus"
      android:toId="@id/done"/>

  <transition
      android:drawable="@drawable/add_note_2_reverse"
      android:fromId="@id/done"
      android:toId="@id/plus"/>

</animated-selector>